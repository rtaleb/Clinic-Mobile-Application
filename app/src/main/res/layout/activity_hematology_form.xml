<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hematology_form"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="0dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.mc.info.lumc.HematologyForm">

    <TextView
        android:text="Hematology"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtHematologyTitle"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="0dp"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Test Date: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtTestDate"
            android:layout_weight="2.87" />

        <EditText
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:ems="10"
            android:id="@+id/hematology_form_date"
            android:layout_weight="0.16" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="RBC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hematology_form_RBC_name"
            android:layout_weight="0.44" />

        <EditText
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/hematology_form_RBC_value"
            android:layout_weight="0.01" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="HCT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hematology_form_HCT_name"
            android:layout_weight="0.44" />

        <EditText
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/hematology_form_HCT_value"
            android:layout_weight="0.01" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="MCV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hematology_form_MCV_name"
            android:layout_weight="0.44" />

        <EditText
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/hematology_form_MCV_value"
            android:layout_weight="0.01" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="MCH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hematology_form_MCH_name"
            android:layout_weight="0.44" />

        <EditText
            android:layout_width="183dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/hematology_form_MCH_value"
            android:layout_weight="0.02" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="RDW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hematology_form_RDW_name"
            android:layout_weight="0.44" />

        <EditText
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/hematology_form_RDW_value"
            android:layout_weight="0.13" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="WBC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hematology_form_WBC_name"
            android:layout_weight="0.44" />

        <EditText
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/hematology_form_WBC_value"
            android:layout_weight="0.01" />


    </LinearLayout>

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnInsertHematology"
        android:layout_weight="13.05"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="10dp" />

</LinearLayout>